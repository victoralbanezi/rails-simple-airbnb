<div class="title">
    <h2>All our flats (<%= @flats.count %>)</h1>
</div>



<div class="cards">
    <% @flats.each do |flat| %>
    <div class="card">
        <img src="https://source.unsplash.com/1600x900/?<%=%w(home, flat,penthouse, airbnb, apartament,house ).sample%>" alt="" />
        <div class="card-description">
            <h1> <%= flat.name %> </h1>
            <h2><%= flat.address%></h2>
            <p><%= flat.description%></p>
        </div>
        <div class="card-bottom">
            <i class="fas fa-user-friends"></i>
            <p><%= flat.number_of_guests%></p>
            <i class="fas fa-dollar-sign"></i>
            <p><%= flat.price_per_night%></p>
        </div>
        <div class="card-btns">
            <%= link_to  "More Info", flat_path(flat) , class: "btn btn-outline-primary btn-sm"%>
            <%= link_to  "Edit Flat", edit_flat_path(flat) , class: "btn btn-outline-secondary btn-sm"%>
            <%= link_to  "Delete Flat", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" },class: "btn btn-outline-danger btn-sm" %>
        </div>
    </div>
    <% end %>
</div>